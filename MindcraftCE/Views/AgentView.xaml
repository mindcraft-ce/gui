<Page
    x:Class="MindcraftCE.Views.AgentView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:vm="using:MindcraftCE.ViewModels"
    xmlns:models="using:MindcraftCE.Models">

    <Page.DataContext>
        <vm:AgentViewModel/>
    </Page.DataContext>

    <Grid>
        <TextBlock
            VerticalAlignment="Center"
            HorizontalAlignment="Center"
            FontSize="18"
            x:Name="messageBox"
            Visibility="Collapsed"
        />
        
        <Grid x:Name="AgentListGrid">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="3*"/>
            </Grid.ColumnDefinitions>

            <Grid Grid.Column="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                
                <Button Margin="25,40,5,20" Grid.Row="0" x:Name="CreateButton" Click="CreateButton_Click">
                    <StackPanel Orientation="Horizontal">
                        <FontIcon Glyph="&#xECC8;" VerticalAlignment="Center"/>
                        <TextBlock Margin="5,0,0,0" Text="Create" VerticalAlignment="Center"/>
                    </StackPanel>
                </Button>

                <ListView
                    x:Name="agentListView" 
                    ItemsSource="{Binding Agents}"
                    SelectionMode="Single"
                    SelectedItem="{Binding SelectedAgent, Mode=TwoWay}"
                    Margin="0,0,0,0"
                    Grid.Row="1"
                    >

                    <ListView.ItemTemplate>
                        <DataTemplate x:DataType="models:Agent">
                            <StackPanel Margin="10">
                                <TextBlock Text="{x:Bind Name}" FontSize="24" FontWeight="Bold"/>
                                <TextBlock Text="{x:Bind ModelInfo}" FontSize="16"/>
                            </StackPanel>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </Grid>

            <!-- Show details of selected agent -->
            <Border
                CornerRadius="12"
                Grid.Column="1"
                BorderBrush="{ThemeResource AppBarBackgroundThemeBrush}"
                BorderThickness="2"
                Margin="10,20,10,10"
                Padding="5"
                Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
                >
                <ScrollViewer
                    VerticalScrollBarVisibility="Auto"
                    HorizontalScrollBarVisibility="Disabled"
                    Padding="15">
                    <StackPanel x:Name="detailPanel">
                        <TextBlock Text="Selected Agent" FontSize="24" Margin="0,0,0,20"/>
                        <!-- We'll fill this dynamically -->
                    </StackPanel>
                </ScrollViewer>
            </Border>
        </Grid>
    </Grid>
</Page>
