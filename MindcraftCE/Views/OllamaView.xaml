<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="MindcraftCE.Views.OllamaView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:MindcraftCE.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:json="using:Newtonsoft.Json.Linq"
    mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <TextBlock
            Margin="0,20,0,10"
            VerticalAlignment="Center"
            HorizontalAlignment="Center"
            TextAlignment="Center"
            FontSize="24"
            x:Name="messageBox"
            Grid.Row="0"
        />

        <Grid x:Name="ModelListGrid" Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="3*"/>
            </Grid.ColumnDefinitions>

            <ListView
                x:Name="modelListView" 
                ItemsSource="{Binding Models}"
                SelectionMode="Single"
                SelectedItem="{Binding SelectedModel, Mode=TwoWay}"
                Margin="0,70,0,0"
                Grid.Column="0">

                <ListView.ItemTemplate>
                    <DataTemplate x:DataType="local:OllamaModel">
                        <StackPanel Margin="10">
                            <TextBlock Text="{x:Bind Name}" FontSize="24" FontWeight="Bold"/>
                            <TextBlock Text="{x:Bind Size}" FontSize="20"/>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0" Text="{x:Bind ParameterSize}" FontSize="16"/>
                                <TextBlock Grid.Column="1" Text="|" Margin="5,0" FontSize="16"/>
                                <TextBlock Grid.Column="2" Text="{x:Bind QuantizationLevel}" FontSize="16"/>
                            </Grid>
                        </StackPanel>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>

            <Border
                CornerRadius="12"
                Grid.Column="1"
                BorderBrush="{ThemeResource AppBarBackgroundThemeBrush}"
                BorderThickness="2"
                Margin="10,20,10,10"
                Padding="15"
                Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
                >

                <Grid x:Name="detailPanel">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="1*"/>
                        <RowDefinition Height="8*"/>
                        <RowDefinition Height="1*"/>
                    </Grid.RowDefinitions>
                    <TextBlock
                        x:Name="panelTitle"
                        Text="Select a model"
                        FontSize="24"
                        Margin="0,0,0,20"
                        Grid.Row="0"
                        />
                    <ScrollViewer
                            VerticalScrollBarVisibility="Auto"
                            HorizontalScrollBarVisibility="Disabled"
                            Padding="5"
                            Grid.Row="1"
                            >
                        <Grid x:Name="chatMessages">
                            <!-- Chat messages will be added here dynamically -->
                        </Grid>
                    </ScrollViewer>
                    <Grid VerticalAlignment="Bottom" Grid.Row="2">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="9*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBox
                            x:Name="inputTextBox"
                            Margin="0,10,0,0"
                            PlaceholderText="Send a message"
                            Height="10"
                            Grid.Column="0"
                            KeyDown="inputTextBox_KeyDown"
                            IsEnabled="False"
                            />
                        <Button
                            x:Name="sendButton"
                            Margin="5,10,0,0"
                            HorizontalAlignment="Right"
                            Grid.Column="1"
                            Click="sendButton_Click"
                            IsEnabled="False"
                            >
                            <FontIcon Glyph="&#xE725;"/>
                        </Button>
                    </Grid>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</Page>
