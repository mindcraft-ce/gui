<Page
    x:Class="mindcraft_ce.Views.AgentView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:vm="using:mindcraft_ce.ViewModels"
    xmlns:models="using:mindcraft_ce.Models">

    <Page.DataContext>
        <vm:AgentViewModel/>
    </Page.DataContext>

    <Grid>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="3*"/>
            </Grid.ColumnDefinitions>

            <ListView
                    x:Name="agentListView" 
                    ItemsSource="{Binding Agents}"
                    SelectionMode="Single"
                    SelectedItem="{Binding SelectedAgent, Mode=TwoWay}"
                    Margin="0,70,0,0"
                    Grid.Column="0">

                <ListView.ItemTemplate>
                    <DataTemplate x:DataType="models:Agent">
                        <StackPanel Margin="10">
                            <TextBlock Text="{x:Bind Name}" FontSize="24" FontWeight="Bold"/>
                            <TextBlock Text="{x:Bind Model.Name}" FontSize="16"/>
                        </StackPanel>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>

            <!-- Show details of selected agent -->
            <Border
                CornerRadius="12"
                Grid.Column="1"
                BorderBrush="{ThemeResource AppBarBackgroundThemeBrush}"
                BorderThickness="2"
                Margin="10,20,10,10"
                Padding="5"
                Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
                >
                <ScrollViewer
                    VerticalScrollBarVisibility="Auto"
                    HorizontalScrollBarVisibility="Disabled"
                    Padding="15">
                    <StackPanel x:Name="detailPanel">
                        <TextBlock Text="Selected Agent" FontSize="24" Margin="0,0,0,20"/>
                        <!-- We'll fill this dynamically -->
                    </StackPanel>
                </ScrollViewer>
            </Border>
        </Grid>
    </Grid>
</Page>
